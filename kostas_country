import pycountry_convert as pc

## ως df μου εμφάνιζε μόνο EU, ως data μετέτρεπε όλες τις χώρες σε ηπείρους, και άλλες φορές έσκαγε χωρίς αλλαγές σε κώδικα προηγούμενο

country_list = df["user_country"].unique().tolist()
print(country_list)

for i in range(len(country_list)):
  country_continent_name = pc.country_alpha2_to_continent_code(country_list[i])
  print(country_continent_name) 
  
## το data πρεπει να μετονομαστει.  Tα elements του column user_country πρεπει να αντικατασταθούν με τις ηπείρους

data = data.rename(columns={"user_country": "continent"})
print (data.continent)


onehot = pd.get_dummies(data.continent, prefix='continent')
